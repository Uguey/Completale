<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="completaleJPA">
		<jta-data-source>jdbc/Completale</jta-data-source>
		<class>entities.Challenge</class>
		<class>entities.ChallengePK</class>
		<class>entities.Fragment</class>
		<class>entities.FragmentPK</class>
		<class>entities.Story</class>
		<class>entities.StoryPK</class>
		<class>entities.User</class>
		<class>entities.Winnerstory</class>
		<class>entities.WinnerstoryPK</class>
		<class>entities.Wrap</class>
		<class>entities.WrapPK</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="eclipselink.weaving.internal" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
